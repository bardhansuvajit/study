# Project Configuration
PROJECT_NAME=laravel-react-app

# User mapping (run `id -u` and `id -g` on host to get these)
# On Linux/Mac: Run `id -u` and `id -g` in terminal
# On Windows (WSL2): Usually 1000:1000
HOST_USER_ID=1000
HOST_GROUP_ID=1000

# PHP Configuration
PHP_VERSION=8.4
PHP_MEMORY_LIMIT=256M

# MySQL Configuration
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=laravel12_react
MYSQL_USER=laravel
MYSQL_PASSWORD=secret
MYSQL_PORT=3307

# Redis Configuration
REDIS_PORT=6379

# Nginx Configuration
NGINX_PORT=8080